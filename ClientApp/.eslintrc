{
  "parser": "babel-eslint",
  "env": { "es6": true },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "destructuring": true,
      "arrowFunctions": true,
      "forOf": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "semi": "off",
    "quotes": ["error", "single"]
  }
}
